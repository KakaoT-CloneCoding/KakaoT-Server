// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  DRIVER
  CLIENT
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  nickname    String?
  profile_image_url String?
  role Role?
}