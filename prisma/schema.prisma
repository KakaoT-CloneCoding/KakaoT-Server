model User {
  id               Int           @id @default(autoincrement())
  email            String        @unique
  nickname         String?
  profile_image_url String?
  role             Role?
  createdAt        DateTime   @default(now())
  deletedAt        DateTime?
  requests         Request[]
  Accepts           Accept[]
}

model Request {
  id           Int      @id @default(autoincrement())
  orderId      String
  client       User     @relation( fields: [clientId], references: [id])
  clientId     Int
  departureAddress  String
  destinationAddress     String
   
  departureLatitude     Decimal  @db.Decimal(13,10)
  departureLongitude    Decimal  @db.Decimal(13,10)
  
  destinationLatitude    Decimal  @db.Decimal(13,10)
  destinationLongitude    Decimal  @db.Decimal(13,10)

  createdAt DateTime @default(now())
  deletedAt DateTime? 
  accept  Accept?
}

model Accept {
  id        Int     @id @default(autoincrement())
  request   Request @relation(fields: [requestId], references: [id])
  driver User @relation(fields: [driverId], references: [id])
  requestId Int @unique
  driverId Int
  createdAt DateTime @default(now())
  expiredAt DateTime? @db.Date()
}